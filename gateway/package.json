{
  "name": "@engg-support-system/gateway",
  "version": "0.1.0",
  "description": "Unified Gateway for Engineering Support System - deterministic agent that queries both Qdrant and Neo4j",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:server": "node dist/server.js",
    "test": "vitest run",
    "test:unit": "vitest run src/test/unit",
    "test:integration": "vitest run src/test/integration",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "gateway",
    "mcp",
    "qdrant",
    "neo4j",
    "engineering-context"
  ],
  "author": "engg-support-system",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@qdrant/js-client-rest": "^1.12.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.9.1",
    "neo4j-driver": "^5.20.0",
    "opossum": "^5.0.1",
    "prom-client": "^15.1.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "typescript": "^5.9.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
